#!/usr/bin/env -S mycmd myproject run
# -*- mode: shell-script; sh-shell: bash; sh-basic-offset: 4; sh-indentation: 4; coding: utf-8 -*-
# shellcheck shell=bash

set -o nounset -o errexit -o errtrace -o pipefail

# --------------------------------------------------------------------------------------------------
# List Fileset Tasks
myproject.register_task_definition_file_description "Tasks for listing files in BashDocs' filesets"

myproject.register_task_with_fileset all-files \
    myproject.list_files \
    ALL_FILES
myproject.register_task_description all-files "List all files in the project."

myproject.register_task_with_fileset all-task-definition-files \
    myproject.list_files \
    TASK_DEFINITION_FILES
myproject.register_task_description all-task-definition-files "List all of the task definition files in the project."

myproject.register_task_with_fileset go-files \
    myproject.list_files \
    GO_FILES
myproject.register_task_description go-files "List all of the Go source files in the project."

mycmd.trace "Finished loading the list task definition file."
